generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
    moduleFormat = "cjs"

}

datasource db {
  provider = "postgresql"
}


model User {
  id            String   @id @default(uuid())
  email         String   @unique
  role          Role     @default(MEMBER)
  passwordHash  String
  balancePaise  String   @default("100000")
  createdAt     DateTime @default(now())
  decimal       Int      @default(2)
  orders        Order[]  @relation("UserOrders")
  tradesAsMaker Trade[]  @relation("MakerTrades")
  tradesAsTaker Trade[]  @relation("TakerTrades")
}

enum OrderSide {
  YES
  NO
}

enum OrderStatus {
  OPEN
  FILLED
  CANCELLED
}

enum OutcomeStaus {
  YES
  NO
  DISPUTED
}

enum Role {
  ADMIN
  MEMBER
}

model Order {
  id         String      @id @default(uuid())
  userId     String
  side       OrderSide
  pricePaise String
  decimal    Int         @default(2)
  qty        Int
  openQty    Int
  status     OrderStatus
  createdAt  DateTime    @default(now())

  user    User   @relation("UserOrders", fields: [userId], references: [id])
  event   Event  @relation("EventOrders", fields: [eventId], references: [id])
  eventId String

  makerTrades     Trade[] @relation("MakerOrder")
  aggressorTrades Trade[] @relation("AggressorOrder")

  @@index([status, side])
}

model Trade {
  id               String @id @default(uuid())
  orderAggressorId String
  makerOrderId     String
  pricePaise       String
  decimal          Int    @default(2)

  side           OrderSide
  qty            Int
  takerId        String
  makerId        String
  createdAt      DateTime  @default(now())
  eventId        String
  event          Event     @relation("EventTrades", fields: [eventId], references: [id])
  aggressorOrder Order     @relation("AggressorOrder", fields: [orderAggressorId], references: [id])
  makerOrder     Order     @relation("MakerOrder", fields: [makerOrderId], references: [id])

  maker User @relation("MakerTrades", fields: [makerId], references: [id])
  taker User @relation("TakerTrades", fields: [takerId], references: [id])

  @@index([makerId])
  @@index([takerId])
}

enum EventStatus {
  OPEN
  CLOSED
  SETTLED
}

enum DisputeStatus {
  RESOLVED
  INREVIEW
}

model Event {
  id               String            @id @default(uuid())
  title            String
  description      String?
  startsAt         DateTime
  endsAt           DateTime
  status           EventStatus       @default(OPEN)
  outcome          OutcomeStaus?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  orders           Order[]           @relation("EventOrders")
  trade            Trade[]           @relation("EventTrades")
  dispute          Dispute?

  @@index([status, endsAt])
}

model Dispute {
  id      String        @id @default(uuid())
  eventId String        @unique
  reason  String
  event   Event         @relation(fields: [eventId], references: [id])
  status  DisputeStatus @default(INREVIEW)
}



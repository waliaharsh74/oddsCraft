{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pnpm install && pnpm run build",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": [
                        "nodejs",
                        "corepack"
                    ]
                },
                "install": {
                    "dependsOn": [
                        "setup"
                    ],
                    "cmds": [
                        "corepack enable",
                        "corepack prepare pnpm@latest --activate",
                        "pnpm install"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "pnpm run start"
    }
}